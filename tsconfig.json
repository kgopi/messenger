
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "./",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
        "types": [
            "node"
         ],
         "typeRoots": [
            "node_modules/@types"
         ],
         "moduleResolution": "node",
         "lib": ["es2015", "es2017", "dom"]
    },
    "exclude": [
        "node_modules"
    ]
}